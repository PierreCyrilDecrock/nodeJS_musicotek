<% include partials/header %>

<div class="page-header">
<h1>Home</h1>
</div>

<div class="col-lg-8">
  <h2>Top 5 chansons</h2>
  <table class="table table-condensed">
    <thead>
      <tr>
        <th>Title</th>
        <th>Album</th>
        <th>Artist</th>
        <th>Year</th>
        <th>BPM</th>
        <th>Rank</th>
      </tr>
    </thead>
    <% top5.forEach((top) =>{%>
      <tr>
        <td>
          <a href="/songs/<%=top._id%>"><%=top.song.title%></a>
        </td>
        <td><%=top.song.album%></td>
        <td><%=top.song.artist%></td>
        <td>
          <% if (top.song.year) { %><%=top.song.year%><% } %>
        </td>
        <td>
          <% if (top.song.bpm) { %><%=top.song.bpm%><% } %>
        </td>
        <td><%= top.avgNote %></td>
      </tr>
    <% }) %>
  </table>
</div>

<div class="col-lg-4">
  <h2>Utilisateurs r√©cents</h2>
  <ul>
    <% newestUsers.forEach((user) => {%>
      <li><a href="/users/<%=user._id%>"><%=user.displayName%></a></li>
    <% }) %>
  </ul>

</div>

<% include partials/footer %>
